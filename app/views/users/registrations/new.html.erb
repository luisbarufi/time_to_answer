<body class="hold-transition register-page">
  <div class="register-box">
    <div class="register-logo">
      <h2>Sign up</h2>
    </div>

    <div class="card">
      <div class="card-body register-card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-text">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-text">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              <small class="form-text">(<%= @minimum_password_length %> caracteres no m√≠nimo)</small>
            <% end %>
          </div>

          <div class="form-text mb-3">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Retype password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-block mb-3" %>
            <%= render "users/shared/links" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</body>
