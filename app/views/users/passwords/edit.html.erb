<body class="hold-transition register-page">
  <div class="register-box">
    <div class="register-logo">
      <h2>Change your password</h2>
    </div>

    <div class="card">
      <div class="card-body register-card-body">
      
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-text">
            <%= f.label :password, "New password" %>
            <% if @minimum_password_length %>
              <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "New password" %>
              <small class="form-text">(<%= @minimum_password_length %> caracteres no m√≠nimo)</small>
            <% end %>
          </div>

          <div class="form-text mb-3">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: "btn btn-primary btn-block mb-3"  %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</body>