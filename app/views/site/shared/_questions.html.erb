<div class="jumbotron">
  <% unless params[:term] %>
    <h3>Ãšltimas perguntas cadastradas...</h3>
  <% else %>
    <h3><%= "Resultados para o termo: \"#{params[:term]}\"."%></h3>          
  <% end %>
</div>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="card">
        <h5 class="card-header" style="background-color: #E9ECEF;"> <%= question.description %> </h5>
        <div class="card-body">
          <ul>
            <% question.answers.each do |answer|%>
              <li style="list-style:none">
                <label class="form-check-label">
                  <%= radio_button_tag 'answer_id', answer.id %> <%= answer.description %>
                </label>
              </li>
            <% end %>
            <li style="list-style:none">
              <%= form.submit 'Responder', class: "btn btn-default btn-sm mt-2", id: "submit_#{question.id}" %>
            </li>
          </ul>
        </div>
    </div>
  <% end %>
<% end %>

<div class="card">
  <div class="card-footer">
    <%= paginate @questions %>
  </div>
</div>

<%= javascript_tag nonce: true do %>
  toastr["info"]("Nenhum registro encontrado");
<% end if @questions_count == 0 %>
