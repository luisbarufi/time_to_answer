<div class="card">
  <div class="card-header">
    <h1>Listando Assuntos/√Åreas</h1>  
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th><%= translate_attribute(@subjects, :id) %></th>
            <th><%= translate_attribute(@subjects, :description) %></th>
            <th colspan="2">
              <%= link_to new_admins_backoffice_subject_path, class:"btn btn-primary btn-sm float-right" do %>
                <%= t("views.actions.new") %>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.id %></td>
              <td><%= subject.description %></td>
              <td>
                <%= link_to edit_admins_backoffice_subject_path(subject), class:"float-right", title:"#{t('views.actions.edit')}" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to admins_backoffice_subject_path(subject), method: :delete, data: { confirm: "#{t('views.actions.confirm')}"}, class:"float-right", title:"#{t('views.actions.delete')}" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= paginate @subjects %>
  </div>
</div>
