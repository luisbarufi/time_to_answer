<div class="card">
  <div class="card-header">
    <h2><%= t("views.questions.title_list")%></h2>  
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th><%= translate_attribute(@questions, :id) %></th>
            <th><%= translate_attribute(@questions, :description) %></th>
            <th><%= translate_attribute(@questions, :subject) %></th>
            <th colspan="2">
              <%= link_to new_admins_backoffice_question_path, class:"btn btn-primary btn-sm float-right" do %>
                <%= t("views.actions.new") %>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.id %></td>
              <td><%= question.description.truncate(55) %></td>
              <td><%= question.subject.description.truncate(35) %></td>
              <td>
                <%= link_to edit_admins_backoffice_question_path(question), class:"float-right", title:"#{t('views.actions.edit')}" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to admins_backoffice_question_path(question), method: :delete, data: { confirm: "#{t('views.actions.confirm')}"}, class:"float-right", title:"#{t('views.actions.delete')}" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= paginate @questions %>
  </div>
</div>
