<div class="card">
  <div class="card-header">
    <h1>Listando Perguntas</h1>  
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Assunto</th>
            <th>Descrição</th>
            <th colspan="2">
              <%= link_to new_admins_backoffice_question_path, class:"btn btn-primary btn-sm float-right" do %>
                New
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.id %></td>
              <td><%= question.subject.description.truncate(35) %></td>
              <td><%= question.description.truncate(55) %></td>
              <td>
                <%= link_to edit_admins_backoffice_question_path(question), class:"float-right" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to admins_backoffice_question_path(question), method: :delete, data: { confirm: "Tem certeza?"}, class:"float-right" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= paginate @questions %>
  </div>
</div>
