<div class="nested-fields w-75">
  <div class="row m-2">

    <div class="col-12 col-md-2 mt-2">
      <%= f.label :description %>
    </div>

    <div class="col-12 col-md-4">
      <%= f.text_field :description, class:"form-control"  %>
    </div>

    <div class="col-12 col-md-2 mt-2 ml-4">
      <%= f.check_box :correct %><%= t('forms.correct') %>
    </div>

    <div class="col-12 col-md-3 mt-2">
      <%= link_to_remove_association(t('forms.remove'), f) %>
    </div>

  </div>
</div>
