<div class="card">
  <div class="card-header">
    <h1>Listando Administradores</h1>  
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Email</th>
            <th colspan="2">
              <%= link_to new_admins_backoffice_admin_path, class:"btn btn-primary btn-sm float-right" do %>
                New
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <td>
                <%= link_to edit_admins_backoffice_admin_path(admin), class:"float-right" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to admins_backoffice_admin_path(admin), method: :delete, data: { confirm: "Tem certeza?"}, class:"float-right" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= paginate @admins %>
  </div>
</div>
